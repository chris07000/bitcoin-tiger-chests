{
  "version": 2,
  "buildCommand": "npm run build",
  "installCommand": "rm -rf node_modules package-lock.json && npm install",
  "framework": "nextjs",
  "builds": [
    {
      "src": "next.config.js",
      "use": "@vercel/next"
    }
  ],
  "env": {
    "NODE_OPTIONS": "--max-old-space-size=4096",
    "SKIP_ENV_VALIDATION": "1"
  }
} 